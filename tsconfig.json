{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "types": ["vinxi/types/client"],
        "isolatedModules": true,
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*", "./auto-imports.d.ts", "./src/.global.d.ts"]
}
